# Core database (MongoDB) - replica set required for Prisma
# Use `mongo` when running inside Docker; switch to `localhost` only when the app itself runs on the host.
MONGODB_URI="mongodb://mongo:27017/deltalytix?replicaSet=rs0"
# Optional: override default database name (otherwise derived from URI)
# MONGODB_DB="deltalytix"

# Auth / security
AUTH_SECRET="replace-with-strong-random-string"
ENCRYPTION_KEY="replace-with-32-byte-key"

# AI / APIs
OPENAI_API_KEY="your_openai_api_key_here"
RESEND_API_KEY="your_resend_api_key_here"
GITHUB_TOKEN="your_github_token_here"

# Public metadata
NEXT_PUBLIC_REPO_OWNER="your_github_username"
NEXT_PUBLIC_REPO_NAME="your_repo_name"

# Support emails
SUPPORT_TEAM_EMAIL="support-team@example.com"
SUPPORT_EMAIL="support@example.com"

# Tutorial videos
NEXT_PUBLIC_RITHMIC_PERFORMANCE_TUTORIAL_VIDEO="your_video_url_here"
NEXT_PUBLIC_RITHMIC_ORDER_TUTORIAL_VIDEO="your_video_url_here"
NEXT_PUBLIC_NINJATRADER_PERFORMANCE_TUTORIAL_VIDEO="your_video_url_here"

# Release Info
NEXT_PUBLIC_BUILD_NUMBER=1.0.0
NEXT_PUBLIC_BUILD_DATE=2025-11-29
